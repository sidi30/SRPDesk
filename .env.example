# Docker images (set by CI/CD, or manually for local builds)
IMAGE_PREFIX=ghcr.io/your-org/srpdesk
IMAGE_TAG=latest

# PostgreSQL
POSTGRES_DB=srpdesk
POSTGRES_USER=srpdesk
POSTGRES_PASSWORD=changeme

# Keycloak
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=changeme
KC_HOSTNAME=auth.srpdesk.com

# MinIO
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=changeme

# Backend
DB_HOST=postgres
DB_PORT=5432
DB_NAME=srpdesk
DB_USER=srpdesk
DB_PASSWORD=changeme
KEYCLOAK_ISSUER_URI=https://auth.srpdesk.com/realms/srpdesk
KEYCLOAK_JWK_URI=http://keycloak:8080/realms/srpdesk/protocol/openid-connect/certs
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=changeme
S3_BUCKET=evidences
CORS_ORIGINS=https://app.srpdesk.com
SPRING_PROFILES_ACTIVE=prod

# Frontend (build-time)
VITE_KEYCLOAK_URL=https://auth.srpdesk.com
VITE_KEYCLOAK_REALM=srpdesk
VITE_KEYCLOAK_CLIENT_ID=frontend

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_ENABLED=false
EMAIL_FROM=noreply@srpdesk.com

# AI (optional)
AI_ENABLED=false
OLLAMA_BASE_URL=http://ollama:11434
