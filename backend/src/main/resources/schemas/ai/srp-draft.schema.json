{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["summary", "affected_versions", "impact", "mitigation", "patch_status", "timeline", "references"],
  "properties": {
    "summary": { "type": "string", "minLength": 10 },
    "affected_versions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "impact": { "type": "string", "minLength": 5 },
    "mitigation": { "type": "string" },
    "patch_status": { "type": "string" },
    "timeline": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["date", "event"],
        "properties": {
          "date": { "type": "string" },
          "event": { "type": "string" }
        }
      }
    },
    "references": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "id"],
        "properties": {
          "type": { "type": "string", "enum": ["release", "finding", "evidence", "audit_event", "product"] },
          "id": { "type": "string" },
          "label": { "type": "string" }
        }
      }
    }
  },
  "additionalProperties": false
}
