{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["question_id", "question", "answer", "confidence", "references"],
    "properties": {
      "question_id": { "type": "string" },
      "question": { "type": "string" },
      "answer": { "type": "string" },
      "confidence": { "type": "string", "enum": ["HIGH", "MEDIUM", "LOW", "UNKNOWN"] },
      "references": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["type", "id"],
          "properties": {
            "type": { "type": "string", "enum": ["release", "finding", "evidence", "audit_event", "product"] },
            "id": { "type": "string" },
            "label": { "type": "string" }
          }
        }
      }
    }
  }
}
